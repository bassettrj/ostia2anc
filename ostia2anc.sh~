

# unpack ostia (scale and offset)
d=2010-01-01
while [ "$d" != 2010-01-03 ]; do 
    d2=$(echo $d | sed 's/\-//g')
    d3=$(echo $d | sed 's/\-//g')

    in="../ostia_sst/"$d2"_sst.nc"
    out="unpacked_"$d2"_sst.nc"
    #echo $in
    echo $out
    #ncpdq --unpack $in $out

    # run xancil
    cp xancil_sst.job temp_xancil.job
    sed -i "s/$d/$d2/g" temp_xancil.job

    # next day
    d=$(date -I -d "$d + 1 day")
done




# clear up unpacked files
#rm unpacked*
